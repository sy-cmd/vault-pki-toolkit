# Certificate Renewal Daemon Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Host: {{ inventory_hostname }}

# Monitoring Settings
SCAN_INTERVAL={{ renewal_scan_interval | default(3600) }}
CERT_DIRECTORY={{ cert_directory | default('/etc/ssl/certs') }}
RECURSIVE={{ recursive | default('false') }}

# Renewal Thresholds
RENEWAL_THRESHOLD={{ renewal_threshold | default(7) }}
MIN_REMAINING=1

# Vault Settings
VAULT_ADDR={{ vault_address }}
VAULT_TOKEN={{ vault_auth_token | default('') }}
PKI_PATH={{ pki_path | default('pki_int') }}
DEFAULT_ROLE={{ default_role | default('server') }}

# Backup Settings
BACKUP_OLD_CERTS=true
BACKUP_DIRECTORY=/var/backups/certs

# Logging
LOG_FILE=/var/log/vault-pki/renewal.log
LOG_LEVEL=info

# Daemon Control
PID_FILE=/var/run/cert-renewal-daemon.pid
STATE_FILE=/var/lib/vault-pki/renewal-state.json
